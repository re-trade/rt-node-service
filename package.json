{
  "name": "@retrade/rt-node-service",
  "version": "1.0.0",
  "description": "Real-time Chat Socket and WebRTC Server",
  "repository": "git@github.com:retrade/rt-node-service.git",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "type": "module",
  "author": "@AnataAria",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "start": "node ./build/index.js",
    "clean": "rimraf ./build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.7.4",
    "@types/uuid": "^9.0.7",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "turbo": "^2.0.14",
    "typescript": "^5.6.2"
  }
