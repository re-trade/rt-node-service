{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.js", "tsconfig.json", "package.json"],
      "outputs": ["build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.ts", "src/**/*.js", "tsconfig.json", "package.json"]
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig.json"]
    }
  },
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"]
}
